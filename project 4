#include <iostream>

using namespace std;

int main()
{
    int x, y;
    float a, b;
    cout << "enter the value of x and y ";
    cin >> x >> y;
    cout << "enter the value of a and b ";
    cin >> a >> b;
    cout << " x + y = " << x + y << endl;
    cout << " a + b = " << a + b << endl;
    cout << " x - y = " << x - y << endl;
    cout << " a - b = " << a - b << endl;
    cout << " x * y = " << x * y << endl;
    cout << " a * b = " << a * b << endl;
    cout << " x / y = " << x / y << endl;
    cout << " a / b = " << a / b << endl;

    return 0;
}
