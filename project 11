#include <iostream>

using namespace std;

int main()
{
    int l;
    int b;
    cout << "enter the value of length = " << endl;
    cin >> l;
    cout << "enter the value of breadth = " << endl;
    cin >> b;
    cout << "area = " << l*b << endl;
    cout << "perimeter = " << 2*(l+b) << endl;
    return 0;
}
